Algoritmo Calcular_Area_Triangulo
	
	Definir base Como Real;
	Definir altura Como Real;
	
	Escribir "Introduzca el valor de la base del triangulo";
	Leer base;
	
	Escribir "Introduzca el valor de la altura del triangulo";
	Leer altura;
	
	Escribir "El area del triangulo de base ", base, " y altura ", altura, " es igual a: ", (base * altura)/2;
	
FinAlgoritmo
